{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "globalEnv": [
    "NODE_ENV"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*", "vite.config.*", "react-router.config.*"],
      "outputs": ["build/**", "dist/**", ".vercel/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "start": {
      "dependsOn": ["^start"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": []
    },
    "test:ci": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": []
    },
    "storybook": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "build-storybook": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".storybook/**", "app/**", "vite.config.*", "react-router.config.*", "tsconfig.json"],
      "outputs": ["storybook-static/**"]
    },
    "interaction-test": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".storybook/**", "app/**", "vite.config.*", "react-router.config.*", "tsconfig.json"],
      "outputs": []
    }
  }
}
