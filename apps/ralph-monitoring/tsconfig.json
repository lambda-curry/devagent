{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDirs": ["./app", "./.react-router/types/app"],
    "paths": {
      "~/*": ["./app/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".react-router/types/**/*.ts",
    ".react-router/types/**/*.d.ts",
    "**/.server/**/*.ts",
    "**/.server/**/*.tsx",
    "**/.client/**/*.ts",
    "**/.client/**/*.tsx"
  ],
  "exclude": [
    "scripts/**/*.ts"
  ]
}
