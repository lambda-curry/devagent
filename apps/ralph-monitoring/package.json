{
  "name": "ralph-monitoring",
  "version": "0.0.1",
  "description": "Ralph Monitoring UI - React Router 7 App",
  "author": "Lambda Curry <team@lambdacurry.dev>",
  "license": "UNLICENSED",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.11.0"
  },
  "sideEffects": false,
  "scripts": {
    "build": "react-router build",
    "dev": "react-router dev",
    "start": "react-router-serve ./build/server/index.js",
    "storybook": "storybook dev -p 6006 --config-dir .storybook --disable-telemetry",
    "build-storybook": "storybook build --config-dir .storybook --disable-telemetry",
    "interaction-test": "test-storybook --url http://127.0.0.1:6006 --config-dir .storybook",
    "typecheck": "react-router typegen && tsc --noEmit",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:ci": "vitest run",
    "test:perf": "VITEST_PERF=true vitest run 'app/routes/__tests__/api.logs.$taskId.stream.perf.test.ts'",
    "serve": "bun run ./scripts/serve-built.ts",
    "preview:funnel": "bun run ./scripts/preview-funnel.ts"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "8.6.14",
    "@storybook/react": "8.6.14",
    "@storybook/react-vite": "8.6.14",
    "@storybook/test": "8.6.15",
    "@storybook/test-runner": "^0.24.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^26.1.0",
    "playwright": "^1.57.0",
    "storybook": "8.6.14",
    "typescript": "^5.8.3",
    "vite": "^6.3.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@react-router/node": "^7.7.1",
    "@react-router/serve": "^7.7.1",
    "@tailwindcss/vite": "^4.1.10",
    "better-sqlite3": "^11.7.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "isbot": "^5.1.27",
    "lucide-react": "^0.525.0",
    "next-themes": "^0.4.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "react-router": "^7.7.1",
    "remark-gfm": "^4.0.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.10"
  }
}
